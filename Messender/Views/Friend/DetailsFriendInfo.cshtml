@using Microsoft.AspNet.Identity
@model Messender.Models.ApplicationUser
@{
    ViewBag.Title = "DetailsFriendInfo";
}

<div class="modal-content" style=" width: 424px" overflow:auto>
    <div class="modal-body">
        <div id="profilepic">
            <table>
                <tr>
                    <td>
                        <label style="margin-left: 35px">
                            @Html.Raw("<img class='rounded-circle' style='width:120px; height:120px;' src=\"data:image/jpeg;base64,"
                                                                         + Convert.ToBase64String(Model.Image) + "\" />")
                            @Html.DisplayFor(m => m.FirstName)
                            @Html.DisplayFor(m => m.LastName)
                        </label>
                    </td>
                </tr>
            </table>
        </div>
        <hr />
        <div>
            <div id="divBasicInfo" class="dl-horizontal" style="margin-left: 15px">
                <table class="table">
                    @if (Model.Email != null)
                    {
                        <tr>
                            <td>
                                Email:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Email)
                            </td>
                        </tr>
                    }
                    @if (Model.DateOfBirth != null)
                    {
                        <tr>
                            <td>
                                Date of bitrh:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.DateOfBirth)
                            </td>
                        </tr>
                    }
                    @if (Model.PhoneNumber != null)
                    {
                        <tr>
                            <td>
                                Phone number:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.PhoneNumber)
                            </td>
                        </tr>
                    }
                    @if (Model.Address != null)
                    {
                        <tr>
                            <td>
                                Address:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Address)
                            </td>
                        </tr>
                    }
                    @if (Model.Sity != null)
                    {
                        <tr>
                            <td>
                                City:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Sity)
                            </td>
                        </tr>
                    }
                    @if (Model.State != null)
                    {
                        <tr>
                            <td>
                                State:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.State)
                            </td>
                        </tr>
                    }
                    @if (Model.County != null)
                    {
                        <tr>
                            <td>
                                Country:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.County)
                            </td>
                        </tr>
                    }
                    @if (Model.Gender != null)
                    {
                        <tr>
                            <td>
                                Gender:
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Gender)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

